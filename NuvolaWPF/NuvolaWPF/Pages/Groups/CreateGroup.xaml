<UserControl x:Class="NuvolaWPF.Pages.Groups.CreateGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <Label Content="GroupName: " Margin="0,10,0,0" FontSize="26"></Label>
                <TextBox Name="groupNameBox" FontSize="26" Margin="0,10,0,0"></TextBox>
                <Button Name="createBtn" Click="createBtn_Click" Content="Create" Margin="0,20,0,0" Width="100" Height="50"></Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
